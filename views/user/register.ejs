<!DOCTYPE html>
<html lang="en">
<title>Goal Buddies - Register</title>
<% include ../header.ejs %>
<script src="/javascripts/user/register.js"></script>

<body>
    <div class="container">
        <% include ../topnav.ejs %>
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div id="errorDiv" class='alert alert-danger hidden'>
                        <span class="glyphicon glyphicon-warning-sign"></span>&nbsp;
                        <span id="errorMessage"></span>
                    </div>

                    <form role="form" id="registerForm" action="/api/users" method="POST">
                        <div class="panel panel-default">
                            <div class="panel-heading">Account Details</div>
                            <div class="panel-body">
                                <div class="form-group has-feedback">
                                    <label for="username">Username: (minimum 6 characters)</label>
                                    <input id="username" type="text" class="form-control" name="username">
                                    <span class="glyphicon form-control-feedback" id="usernameg"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="password">Password: (minimum 6 characters)</label>
                                    <input id="password" type="password" class="form-control" name="password">
                                    <span class="glyphicon form-control-feedback" id="passwordg"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="cpassword">Confirm Password:</label>
                                    <input id="cpassword" type="password" class="form-control" name="cpassword">
                                    <span class="glyphicon form-control-feedback" id="cpasswordg"></span>
                                </div>
                            </div>
                        </div>
                            
                        <div class="panel panel-default">
                            <div class="panel-heading">User Details</div>
                            <div class="panel-body">
                                <div class="form-group has-feedback">
                                    <label for="firstName">First Name:</label>
                                    <input id="firstName" type="text" class="form-control" name="firstName">
                                    <span class="glyphicon form-control-feedback" id="firstNameg"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="lastName">Last Name:</label>
                                    <input id="lastName" type="text" class="form-control" name="lastName">
                                    <span class="glyphicon form-control-feedback" id="lastNameg"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="city">City:</label>
                                    <input id="city" type="text" class="form-control" name="city">
                                    <span class="glyphicon form-control-feedback" id="cityg"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group has-feedback form-inline">
			                <input type="checkbox" class="checkbox" id="agree" name="agree">
                            <label for="agree">I agree to the Terms and Conditions.</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                        <img id="loaderGif" src="/images/ajax-loader.gif" class="hidden"/>
                    </form>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
</body>
</html>
