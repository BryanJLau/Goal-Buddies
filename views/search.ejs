<!DOCTYPE html>
<html lang="en">
<title>Goal Buddies - Search</title>
<% include ../header.ejs %>

<body>
    <div class="container">
        <% include topnav.ejs %>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2>User Results</h2></div>
                        <div class="panel-body">
                            <% if(username != "") { %>
                                <div class="list-group">
                                    <a href="/user/profile/<%= username %>"
                                        class="list-group-item"><%= username %></a>
                                </div>
                            <% } else { %>
                                No users found!
                            <% } %>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2>Your Goal Results</h2></div>
                        <div class="panel-body">
                            <% for(var i = 0; i < goals.length; i++) { %>
                                <%= goals[i]["body"] %><br>
                            <% } %>
                            <% if(goals.length == 0) { %>
                                No goals found!
                            <% } %>
                        </div>
                    </div>
                </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</body>
</html>
